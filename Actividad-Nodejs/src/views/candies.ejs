<%- include ('partials/_header') %>

<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Expiration</th>
                        <th>is Salad</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data) { %>
                        <% for(var i = 0; i < data.length; i++){ %>
                            <tr>
                                <td><%= data[i].name %></td>
                                <td><%= data[i].price %></td>
                                <td><%= data[i].expiration %></td>
                                <td><%= data[i].isSalad %></td>
                                <td><%= data[i].status %></td>
                                <td>
                                    <a href="/delete/<%= data[i].id %>" class="btn btn-danger">DELETE</a>
                                    <a href="/update/<%= data[i].id %>" class="btn btn-info">UPDATE</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="price" placeholder="Price" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="expiration" placeholder="Expiration" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="isSalad" placeholder="Is Salad" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="status" placeholder="Status" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary"> SAVE CANDY</button>
                    </form>
                </div>
            </div>
            
        </div>
    </div>
</div>

<%- include ('partials/_footer') %>